{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "incremental": false,
    "skipLibCheck": true,
    "rootDir": "./src/",
    "typeRoots": [
      "node_modules/@types",
      "src/types/global"
    ]
  },
  "include": [
    "src/index.ts",
    "src/types/global/*.ts"
  ]
}
